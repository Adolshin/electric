  body
    block content
    .modal.js-modal
      .overlay.js-overlay
      .modal__content
        svg.modal__close.js-close
          use(xlink:href="./assets/img/sprite.svg#clear")
        .modal__title Оставить заявку
        form(action="./server.php" method="post")#mail-form.modal__form
          label(for='user-phone').modal__label
            .modal__label-title Телефон
            input(type="tel" name="user-phone" id="user-phone").modal__input
          label(for='user-mail').modal__label
            .modal__label-title E-mail
            input(type="email" name="user-mail" id="user-mail").modal__input
          label(for='message').modal__label
            .modal__label-title Комментарий
            textarea(name="message" id="message").modal__textarea
          //button(type='submit').modal__button.button.order-btn Отправить
          a(href='#').modal__button.button.order-btn Отправить